$padding-left = 15em
$margin-left = 15%
$padding-left-1280 = 10em
$margin-left-1280 = 10%
$padding-left-1024 = 3em
$padding-left-480 = 2em

.expenses-detail
  position: absolute
  top: 0
  left: $margin-left
  height: 100%
  padding: 2em "calc(%s + %s)" % ($padding-left $margin-left) 2em $padding-left
  width: "calc(100% - 2 * %s - 2 * %s)" % ($padding-left $margin-left)
  background-color: white
  box-shadow: 0 5px 5px -3px rgba(0,0,0,.2), 0 8px 10px 1px rgba(0,0,0,.14), 0 3px 14px 2px rgba(0,0,0,.12)
  .back-button
    margin-bottom: 2em
    position: relative
    top: -1em
    left: "calc(-%s)" % $padding-left
  form
    display: flex
    flex-direction: column
    .date-input
      cursor: pointer
    textarea
      height: 150px
      max-height: 150px
    & > *
      width: 100%
    .amount-container
      display: flex
      width: 100%
      .amount
        flex-grow: 3
      .currency
        padding-right: 2em
        flex-grow: 1
    .form-buttons
      display: flex
      justify-content: center
      button
        width: 150px
      & > button
        margin-right: 8px

@media (max-width: 1280px)
  .expenses-detail
    left: $margin-left-1280
    padding: 2em "calc(%s + %s)" % ($padding-left-1280 $margin-left-1280) 2em $padding-left-1280
    width: "calc(100% - 2 * %s - 2 * %s)" % ($padding-left-1280 $margin-left-1280)
    .back-button
      left: "calc(-%s)" % $padding-left-1280
    form textarea
      height: 100px
      max-height: 150px

@media (max-width: 1024px)
  .expenses-detail
    left: 0
    padding: 2em $padding-left-1024
    width: "calc(100% - 2 * %s)" % ($padding-left-1024)
    .back-button
      left: "calc(-%s)" % $padding-left-1024

@media (max-width: 480px)
  .expenses-detail
    left: 0
    padding: 2em $padding-left-480
    width: "calc(100% - 2 * %s)" % ($padding-left-480)
    .back-button
      left: "calc(-%s)" % $padding-left-480
    form .amount-container
      flex-direction: column
      .currency
        padding-right: 0
